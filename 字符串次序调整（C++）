#include <iostream>
using namespace std;

int main()
{
	string s;
	cin >> s;
	int cnt_a = 0, cnt_b = 0, cnt_c = 0;
	for (int i = 0; i < s.size(); i++) {
		if (s[i] == 'a')
			cnt_a++;
		else if (s[i] == 'b')
			cnt_b++;
		else if (s[i] == 'c')
			cnt_c++;
	}
	for (int i = 0; i < s.size(); i++) {
		if (cnt_b != 0){
			s[i] = 'b';
			cnt_b--;
		}
		else if (cnt_a != 0) {
			s[i] = 'a';
			cnt_a--;
		}
		else if (cnt_c != 0) {
			s[i] = 'c';
			cnt_c--;
		}
	}
	cout << s << endl;
	return 0;
}
